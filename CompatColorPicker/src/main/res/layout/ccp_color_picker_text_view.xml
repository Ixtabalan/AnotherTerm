<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/copy"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:background="#0000"
        android:contentDescription="@android:string/copy"
        android:padding="0dp"
        android:scaleType="fitCenter"
        app:srcCompat="?android:attr/actionModeCopyDrawable" />

    <TextView
        android:id="@+id/text"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:lines="1"
        android:textColor="?android:editTextColor"
        android:typeface="monospace"
        app:autoSizeTextType="uniform"
        tools:text="#FF000000" />

    <ImageButton
        android:id="@+id/paste"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:background="#0000"
        android:contentDescription="@android:string/paste"
        android:padding="0dp"
        android:scaleType="fitCenter"
        app:srcCompat="?android:attr/actionModePasteDrawable" />

</androidx.appcompat.widget.LinearLayoutCompat>
