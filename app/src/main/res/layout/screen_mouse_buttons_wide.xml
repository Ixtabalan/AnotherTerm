<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="480dp"
    android:layout_height="480dp"
    android:splitMotionEvents="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:splitMotionEvents="true">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    style="@style/AppScreenMouseButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|right"
                        android:contentDescription="@null"
                        android:rotation="180"
                        app:srcCompat="@drawable/ic_screen_mouse_button_rd"
                        tools:ignore="RtlHardcoded" />

                </FrameLayout>

                <FrameLayout
                    style="@style/AppScreenMouseButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|right"
                        android:contentDescription="@null"
                        android:rotation="90"
                        app:srcCompat="@drawable/ic_screen_mouse_button_rd"
                        tools:ignore="RtlHardcoded" />

                </FrameLayout>

            </LinearLayout>

            <ImageView
                style="@style/AppScreenMouseButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_gravity="top"
                android:contentDescription="@null"
                android:scaleType="center"
                android:tag="v_scroll"
                app:srcCompat="@drawable/ic_screen_mouse_scroll"
                tools:ignore="RtlHardcoded" />

        </FrameLayout>

        <Space
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:layout_gravity="bottom" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    style="@style/AppScreenMouseButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|left"
                        android:contentDescription="@null"
                        android:rotation="-90"
                        app:srcCompat="@drawable/ic_screen_mouse_button_rd"
                        tools:ignore="RtlHardcoded" />

                </FrameLayout>

                <FrameLayout
                    style="@style/AppScreenMouseButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|left"
                        android:contentDescription="@null"
                        app:srcCompat="@drawable/ic_screen_mouse_button_rd"
                        tools:ignore="RtlHardcoded" />

                </FrameLayout>

            </LinearLayout>

            <ImageView
                style="@style/AppScreenMouseButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_gravity="top"
                android:contentDescription="@null"
                android:scaleType="center"
                android:scaleX="-1"
                android:tag="v_scroll"
                app:srcCompat="@drawable/ic_screen_mouse_scroll"
                tools:ignore="RtlHardcoded" />

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:splitMotionEvents="true">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@null"
            android:scaleType="center"
            android:tag="right"
            app:srcCompat="@drawable/ic_mouse_button_right"
            tools:ignore="RtlHardcoded" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:contentDescription="@null"
            android:scaleType="center"
            android:tag="left"
            app:srcCompat="@drawable/ic_mouse_button_left"
            tools:ignore="RtlHardcoded" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:contentDescription="@null"
            android:scaleType="center"
            android:tag="middle"
            app:srcCompat="@drawable/ic_mouse_button_middle" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:contentDescription="@null"
            android:scaleType="center"
            android:tag="middle"
            app:srcCompat="@drawable/ic_mouse_button_middle" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:contentDescription="@null"
            android:scaleType="center"
            android:tag="left"
            app:srcCompat="@drawable/ic_mouse_button_left"
            tools:ignore="RtlHardcoded" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@null"
            android:scaleType="center"
            android:tag="right"
            app:srcCompat="@drawable/ic_mouse_button_right"
            tools:ignore="RtlHardcoded" />

    </LinearLayout>

</FrameLayout>
