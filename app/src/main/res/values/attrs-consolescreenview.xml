<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ConsoleScreenView">
        <attr name="consoleScreenViewStyle" format="reference" />
        <attr name="cursorColor" format="color" />
        <attr name="selectionColor" format="color" />
        <attr name="selectionMarker" format="reference" />
        <attr name="selectionMarkerPad" format="reference" />
        <attr name="selectionMarkerOOB" format="reference" />
        <attr name="selectionWrappedLineMarker" format="reference" />
        <attr name="terminalScrollOffset" format="dimension" />
        <attr name="terminalHorizontalScrollbarLayout" format="reference" />
        <attr name="terminalVerticalScrollbarLayout" format="reference" />
        <attr name="paddingMarkup" format="reference" />
        <attr name="paddingMarkupAlpha" format="float" />
        <attr name="attrMarkupAlpha" format="float" />
    </declare-styleable>

    <style name="AppConsoleScreenViewStyle" parent="AppExtKeyboardViewStyle">
        <item name="cursorColor">@color/colorTextCursor</item>
        <item name="selectionColor">@color/colorTextSelection</item>
        <item name="selectionMarker">@drawable/ic_select_cursor</item>
        <item name="selectionMarkerPad">@drawable/bg_selection_pad</item>
        <item name="selectionMarkerOOB">@drawable/ic_selection_arrow</item>
        <item name="selectionWrappedLineMarker">@drawable/ic_wrapped_line_marker</item>
        <item name="terminalScrollOffset">-9dp</item>
        <item name="terminalHorizontalScrollbarLayout">@layout/terminal_h_scrollbar</item>
        <item name="terminalVerticalScrollbarLayout">@layout/terminal_v_scrollbar</item>
        <item name="paddingMarkup">@drawable/bg_padding1</item>
        <item name="paddingMarkupAlpha">0.2</item>
        <item name="attrMarkupAlpha">0.7</item>
    </style>
</resources>
